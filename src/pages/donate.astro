---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Donate - Africa Peace Initiative">
  <a href="#main-content" class="skip-link">Skip to main content</a>
  <header>
    <nav class="container navbar">
      <div class="logo">
        <a href="/">
          <img
            src="https://ik.imagekit.io/5zp8ovb7c/Africa%20Peace%20Initiative/API%20logo-12.png?updatedAt=1741074058148"
            alt="Africa Peace Initiative Logo"
            style="height: 60px;"
            loading="eager"
          />
        </a>
      </div>
      <button
        class="hamburger"
        aria-label="Toggle navigation"
        aria-expanded="false"
      >
        <i class="fas fa-bars"></i>
      </button>
      <ul class="nav-links">
        <li><a href="/">Who We Are</a></li>
        <li><a href="/">Our Approach</a></li>
        <li><a href="/">Get Involved</a></li>
        <li><a href="/">News & Press</a></li>
      </ul>
    </nav>
  </header>
  <section class="hero-banner">
    <div class="hero-content container">
      <h1 class="hero-headline">
        Support Our Mission
      </h1>
      <p class="hero-subheadline">
        Your donation can make a significant impact on peace-building efforts in Africa.
      </p>
    </div>
  </section>

  <section class="donate-section">
    <div class="container">
      <h2>Make a Donation</h2>
      <p>Choose your donation amount:</p>
      <div class="donation-options">
        <button class="donation-button">$25</button>
        <button class="donation-button">$50</button>
        <button class="donation-button">$100</button>
        <button class="donation-button">$250</button>
        <button class="donation-button">$500</button>
        <input type="number" placeholder="Enter custom amount" class="custom-amount" />
      </div>

      <div class="payment-details">
        <h3>Payment Information</h3>
        <form class="payment-form">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required />
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required />
          </div>
          <div class="form-group">
            <label for="card-number">Card Number:</label>
            <input type="text" id="card-number" name="card-number" required />
          </div>
          <div class="form-group">
            <label for="expiry">Expiry Date:</label>
            <input type="text" id="expiry" name="expiry" placeholder="MM/YY" required />
          </div>
          <div class="form-group">
            <label for="cvv">CVV:</label>
            <input type="text" id="cvv" name="cvv" required />
          </div>
          <div class="form-group">
            <label class="checkbox-label" for="recurring">
              <input type="checkbox" id="recurring" name="recurring" />
              Make this a recurring donation
            </label>
          </div>
          <button type="submit" class="cta-button primary-button">Donate Now</button>
        </form>
      </div>
    </div>
  </section>
  <footer>
    <div class="container footer-content">
      <div class="footer-col">
        <h3>Contact Us</h3>
        <ul class="contact-info">
          <li>
            <i class="fas fa-envelope"></i> Email: info@africapeaceinitiative.org
          </li>
          <li><i class="fas fa-phone"></i> Phone: +1 (929) 761-2735</li>
          <li>
            <i class="fas fa-map-marker-alt"></i> Address: 12 Peace Street, Nairobi,
            Kenya
          </li>
        </ul>
      </div>
      <div class="footer-col">
        <h3>Follow Us</h3>
        <ul class="social-links">
          <li><a href="#"><i class="fas fa-facebook"></i> Facebook</a></li>
          <li><a href="#"><i class="fas fa-twitter"></i> Twitter</a></li>
          <li><a href="#"><i class="fas fa-instagram"></i> Instagram</a></li>
          <li><a href="#"><i class="fas fa-linkedin"></i> LinkedIn</a></li>
        </ul>
      </div>
      <div class="footer-col">
        <h3>Stay Updated</h3>
        <p>Subscribe to our newsletter for the latest news.</p>
        <form class="newsletter-form">
          <input
            type="email"
            class="newsletter-input"
            placeholder="Your Email Address"
            required
          />
          <button type="submit" class="cta-button primary-button">Subscribe</button>
        </form>
      </div>
    </div>
    <div class="footer-bottom container">
      <p style="color: white;">
        Â© {new Date().getFullYear()} Africa Peace Initiative. All rights reserved.
        |
        <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a>
      </p>
    </div>
  </footer>
</Layout>

<style lang="scss">
  .hero-banner {
    position: relative;
    height: 400px;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: var(--secondary-color);
    background: rgba(46, 139, 87, 0.7);

    &::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(46, 139, 87, 0.4);
      z-index: 1;
    }

    .hero-content {
      position: relative;
      z-index: 2;
      padding: 20px;
    }

    .hero-headline {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
      color: var(--secondary-color);
    }

    .hero-subheadline {
      font-size: 1.5rem;
      margin-bottom: 2.5rem;
      color: var(--off-white);
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.4);
    }
  }

  .donate-section {
    padding: 60px 0;
    background-color: var(--off-white);

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 20px;
    }

    h2 {
      font-size: 2.5rem;
      color: var(--dark-green);
      margin-bottom: 30px;
      text-align: center;
    }

    p {
      font-size: 1.2rem;
      color: var(--neutral-dark);
      margin-bottom: 20px;
      text-align: center;
    }

    .donation-options {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
      margin-bottom: 30px;

      .donation-button {
        padding: 12px 24px;
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--secondary-color);
        background-color: var(--primary-color);
        border: none;
        border-radius: var(--border-radius);
        cursor: pointer;
        transition: background-color 0.3s ease;

        &:hover {
          background-color: var(--primary-darker);
        }
      }

      .custom-amount {
        padding: 12px;
        font-size: 1.1rem;
        border: 1px solid var(--neutral-light);
        border-radius: var(--border-radius);
        width: 150px;
        text-align: center;
      }
    }

    .payment-details {
      h3 {
        font-size: 2rem;
        color: var(--dark-green);
        margin-bottom: 20px;
        text-align: center;
      }

      .payment-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;

        .form-group {
          display: flex;
          flex-direction: column;
          margin-bottom: 15px;

          label {
            font-size: 1.1rem;
            color: var(--neutral-dark);
            margin-bottom: 8px;
            transition: color 0.3s ease;
          }

          input {
            padding: 12px;
            font-size: 1.1rem;
            border: 1px solid var(--neutral-light);
            border-radius: 8px;
            transition: border-color 0.3s ease;
            outline: none;
            background-color: #f9f9f9;
            &:focus {
              border-color: var(--primary-color);
            }
          }
        }

        .checkbox-label {
          display: flex;
          align-items: center;
          font-size: 1.1rem;
          color: var(--neutral-dark);
          margin-bottom: 15px;
          cursor: pointer;

          input[type="checkbox"] {
            margin-right: 10px;
            width: 20px;
            height: 20px;
            cursor: pointer;
          }
        }

        .cta-button {
          margin-top: 10px;
          padding: 14px 28px;
          font-size: 1.1rem;
          border-radius: 8px;
          transition: background-color 0.3s ease, transform 0.3s ease;

          &:hover {
            background-color: var(--primary-darker);
            transform: translateY(-2px);
          }
        }
      }
    }
  }
</style>
