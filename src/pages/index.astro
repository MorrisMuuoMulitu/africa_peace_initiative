import Layout from "../layouts/Layout.astro";
---

<Layout title="Africa Peace Initiative">
  <header>
    <div class="container navbar">
      <div class="logo">
        <a href="/">
          <img
            src="https://ik.imagekit.io/5zp8ovb7c/Africa%20Peace%20Initiative/api_logo_1?updatedAt=1740494826530"
            alt="Africa Peace Initiative Logo"
            style="height: 60px;"
          />
        </a>
      </div>
      <button class="hamburger">
        <i class="fas fa-bars"></i>
      </button>
      <nav>
        <ul class="nav-links">
          <li><a href="/">Who We Are</a></li>
          <li><a href="#about">Our Work</a></li>
          <li><a href="#programs">Our Approach</a></li>
          <li><a href="#get-involved">Get Involved</a></li>
          <li><a href="#contact">News &amp; Press</a></li>
          <li><a href="#contact">Resources</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <section class="hero-banner">
    <div class="hero-image">
      <img src="https://via.placeholder.com/1200x600/4CAF50/FFFFFF?text=DRC+Crisis+Zoom+Event" alt="DRC Crisis Zoom Event" />
    </div>
    <div class="hero-content container">
      <h1 class="hero-headline">
        Join Our Zoom Event: DRC Crisis
      </h1>
      <p class="hero-subheadline">
        Learn about the ongoing crisis in the Democratic Republic of Congo and how you can help.
      </p>
      <p><b>Date:</b> March 6th, 2025</p>
      <a href="#" class="cta-button">Register Now</a>
    </div>
  </section>

  <section id="about" class="about-section">
    <div class="container about-content">
      <div class="about-text">
        <h2>Who We Are</h2>
        <p>
          The Africa Peace Initiative (API) is a pan-African, people-centered organization committed to rethinking peace and security across the continent. We challenge conventional approaches by fostering dialogue, collaboration, technology-driven peacebuilding, and leadership development. Through capacity building, advocacy, mediation, and grassroots engagement, we work to transform conflicts and promote sustainable peace.
        </p>
        <p>
          Our work is rooted in African realities, blending indigenous wisdom with modern solutions to tackle political, social, economic, and environmental drivers of conflict.
        </p>

        <h3>Our Vision</h3>
        <p>
          A resilient, just, and peaceful Africa where communities thrive in dignity, security, and mutual respectâ€”reshaping peace through dialogue, innovation, and collective action.
        </p>

        <h3>Our Mission</h3>
        <p>
          To rethink and transform peace and security in Africa by addressing root causes of conflict, fostering inclusive dialogue, strengthening leadership for peace, and leveraging technology and storytelling to build resilient communities.
        </p>

        <h3>Our Core Values</h3>
        <ul class="about-values">
          <li><i class="fas fa-users"></i> Ubuntu & Solidarity: Shared humanity and collective responsibility for peace.</li>
          <li><i class="fas fa-leaf"></i> Inclusivity & Diversity: Amplifying all voices, ensuring marginalized groups, youth, and women are at the center of peace efforts.</li>
          <li><i class="fas fa-handshake"></i> Innovation & Adaptability: Embracing new ideas, technology, and creative storytelling to drive peace initiatives.</li>
          <li><i class="fas fa-lightbulb"></i> Accountability & Integrity: Upholding ethical leadership, transparency, and community-driven solutions.</li>
          <li><i class="fas fa-globe"></i> Sustainability & Local Ownership: Prioritizing homegrown solutions led by African communities and institutions.</li>
          <li><i class="fas fa-heart"></i> Empathy and Love of the Other: Promoting understanding and compassion as foundations for lasting peace.</li>
        </ul>
      </div>
    </div>
    <blockquote class="quote-section container">
      "Peace is not merely the absence of conflict, but the presence of
      justice." - Dr. Kwame Nkrumah
    </blockquote>
  </section>

  <section id="programs" class="programs-section">
    <div class="container">
      <h2>Our Approach</h2>
      <div class="programs-grid">
        <div class="program-card">
          <img
            src="https://via.placeholder.com/400x300"
            alt="Reimagining Peace through Dialogue"
          />
          <h3 class="program-title">Reimagining Peace through Dialogue</h3>
          <p class="program-description">
            Convening cross-border and inter-community conversations, bridging divides, and fostering understanding.
          </p>
          <a href="#" class="explore-button">Explore Now</a>
        </div>
        <div class="program-card">
          <img
            src="https://via.placeholder.com/400x300"
            alt="Technology & Media for Peace"
          />
          <h3 class="program-title">Technology & Media for Peace</h3>
          <p class="program-description">
            Harnessing digital tools, social media, and storytelling to counter hate speech and misinformation.
          </p>
          <a href="#" class="explore-button">Explore Now</a>
        </div>
        <div class="program-card">
          <img
            src="https://via.placeholder.com/400x300"
            alt="Empowering Leadership & Governance"
          />
          <h3 class="program-title">Empowering Leadership & Governance</h3>
          <p class="program-description">
            Training young leaders, policymakers, and community mediators to drive sustainable change.
          </p>
          <a href="#" class="explore-button">Explore Now</a>
        </div>
        <div class="program-card">
          <img
            src="https://via.placeholder.com/400x300"
            alt="Economic Resilience for Stability"
          />
          <h3 class="program-title">Economic Resilience for Stability</h3>
          <p class="program-description">
            Addressing unemployment, inequality, and resource-based conflicts through innovation and social entrepreneurship.
          </p>
          <a href="#" class="explore-button">Explore Now</a>
        </div>
        <div class="program-card">
          <img
            src="https://via.placeholder.com/400x300"
            alt="Climate, Security & Peace Nexus"
          />
          <h3 class="program-title">Climate, Security & Peace Nexus</h3>
          <p class="program-description">
            Tackling the intersection of environmental challenges and conflicts through adaptation and resilience-building.
          </p>
          <a href="#" class="explore-button">Explore Now</a>
        </div>
        <div class="program-card">
          <img
            src="https://via.placeholder.com/400x300"
            alt="Human Rights & Justice"
          />
          <h3 class="program-title">Human Rights & Justice</h3>
          <p class="program-description">
            Strengthening legal frameworks, accountability mechanisms, and transitional justice for conflict-affected communities.
          </p>
          <a href="#" class="explore-button">Explore Now</a>
        </div>
      </div>
    </div>
  </section>

  <section id="impact" class="impact-section">
    <div class="container">
      <h2>The Change We're Making</h2>
      <div class="impact-stats">
        <div class="stat-item">
          <h4 class="stat-number">50+</h4>
          <p class="stat-label">Communities Supported</p>
        </div>
        <div class="stat-item">
          <h4 class="stat-number">2,000+</h4>
          <p class="stat-label">People Trained</p>
        </div>
        <div class="stat-item">
          <h4 class="stat-number">10</h4>
          <p class="stat-label">Countries Reached</p>
        </div>
      </div>
      <div class="testimonials-carousel">
        {/* Add testimonial carousel here - basic example below */}
        <div class="testimonial-item">
          <p>
            "API's conflict resolution training has transformed our community.
            We are now better equipped to handle disagreements peacefully." -
            Community Leader, South Sudan
          </p>
        </div>
        <div class="testimonial-item">
          <p>
            "The youth leadership program gave me the confidence and skills to
            become a change agent in my society." - Program Participant, Nigeria
          </p>
        </div>
        {/* ... more testimonials ... */}
      </div>
    </div>
  </section>

  <section id="get-involved" class="cta-section">
    <div class="container">
      <h2>Join the Movement!</h2>
      <p>
        Be a part of building a peaceful and prosperous Africa. Your support can
        make a significant difference.
      </p>
      <div class="cta-buttons">
        <a href="#" class="donate-button">Donate Today</a>
        <a href="#" class="volunteer-button">Volunteer Now</a>
      </div>
    </div>
  </section>

  <section id="blog" class="blog-section">
    <div class="container">
      <h2>Latest Updates</h2>
      <div class="blog-grid">
        <div class="blog-post">
          <div class="post-thumbnail">
            <img src="https://via.placeholder.com/600x400" alt="Blog Post 1" />
          </div>
          <div class="post-content">
            <h3 class="post-title">Empowering Women in Peacebuilding</h3>
            <p class="post-excerpt">
              Learn about API's recent initiative to empower women as key actors
              in peacebuilding processes across Africa...
            </p>
            <a href="#" class="read-more-link">Read More</a>
          </div>
        </div>
        <div class="blog-post">
          <div class="post-thumbnail">
            <img src="https://via.placeholder.com/600x400" alt="Blog Post 2" />
          </div>
          <div class="post-content">
            <h3 class="post-title">
              Youth Leading the Way to Sustainable Development
            </h3>
            <p class="post-excerpt">
              Discover how young people are driving sustainable development and
              peace in their communities with API's support...
            </p>
            <a href="#" class="read-more-link">Read More</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <footer id="contact">
    <div class="container footer-content">
      <div class="footer-col">
        <h3>Contact Us</h3>
        <ul class="contact-info">
          <li>
            <i class="fas fa-envelope"></i> Email: info@africapeaceinitiative.org
          </li>
          <li><i class="fas fa-phone"></i> Phone: +234 800 123 4567</li>
          <li>
            <i class="fas fa-map-marker-alt"></i> Address: 12 Peace Street, Nairobi, Kenya
          </li>
        </ul>
      </div>
      <div class="footer-col">
        <h3>Follow Us</h3>
        <ul class="social-links">
          <li><a href="#"><i class="fas fa-facebook"></i> Facebook</a></li>
          <li><a href="#"><i class="fas fa-twitter"></i> Twitter</a></li>
          <li><a href="#"><i class="fas fa-instagram"></i> Instagram</a></li>
          <li><a href="#"><i class="fas fa-linkedin"></i> LinkedIn</a></li>
        </ul>
      </div>
      <div class="footer-col">
        <h3>Stay Updated</h3>
        <p>
          Subscribe to our newsletter to receive the latest news and updates.
        </p>
        <form class="newsletter-form">
          <input
            type="email"
            class="newsletter-input"
            placeholder="Your Email Address"
          />
          <button type="submit" class="newsletter-button">Subscribe</button>
        </form>
      </div>
    </div>
    <div class="footer-bottom container">
      <p>
        &copy; {new Date().getFullYear()} Africa Peace Initiative. All rights reserved.
        | <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a>
      </p>
    </div>
  </footer>
</Layout>

<style lang="scss">
  /* Global Styles */
  :root {
    --primary-color: #4CAF50; /* Updated primary green */
    --primary-darker: #388E3C; /* Darker shade for hover/active */
    --secondary-color: #FFFFFF;
    --dark-gray: #333333;
    --light-gray: #F7F7F7; /* Slightly lighter light gray */
    --accent-color: #FFC107; /* Updated accent yellow */
    --font-family-headings: 'Montserrat', sans-serif;
    --font-family-body: 'Open Sans', sans-serif;
    --shadow-color: rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
  }

  body {
    font-family: var(--font-family-body);
    color: var(--dark-gray);
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: var(--light-gray); /* Set light gray as background */
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-family-headings);
    color: var(--dark-gray);
    font-weight: bold;
    margin-top: 1.2rem; /* Slightly reduced top margin */
    margin-bottom: 0.8rem; /* Slightly reduced bottom margin */
    line-height: 1.2; /* Improved line height for headings */
  }

  p {
    line-height: 1.7; /* Improved line height for body text */
    margin-bottom: 1.2rem; /* Slightly increased bottom margin for paragraphs */
    color: #555; /* Slightly softer text color */
  }

  a {
    text-decoration: none;
    color: var(--primary-color);
    transition: color 0.3s ease; /* Smooth color transition for links */
  }

  a:hover {
    color: var(--primary-darker); /* Darker green on hover */
  }

  /* Layout and Sections */
  .container {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 20px;
    padding-right: 20px;
  }

  section {
    padding: 70px 0; /* Increased section padding */
  }

  /* Header */
  header {
    background-color: var(--secondary-color); /* White header background */
    padding: 25px 0; /* Increased header padding */
    box-shadow: 0 2px 5px var(--shadow-color); /* Add shadow to header */
  }

  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo img {
    height: 60px; /* Slightly larger logo */
  }

  .nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
  }

  .nav-links li {
    margin-left: 25px; /* Increased spacing between nav links */
  }

  .nav-links li:first-child {
    margin-left: 0;
  }

  .nav-links li a {
    color: var(--dark-gray);
    padding: 12px 18px; /* Adjusted padding for nav links */
    border-radius: 7px; /* More rounded nav links */
    transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transitions */
  }

  .nav-links li a:hover {
    background-color: var(--primary-color);
    color: var(--secondary-color);
  }

  .nav-links li a.active {
    background-color: var(--primary-color);
    color: var(--secondary-color);
  }

  /* Hero Banner */
  .hero-banner {
    position: relative;
    height: 600px; /* Increased hero height */
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: var(--secondary-color);
    margin-bottom: 2rem; /* Add margin below hero */
  }

  .hero-banner::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4); /* Slightly lighter overlay */
  }

  .hero-banner video,
  .hero-banner img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1s ease-out; /* Smooth zoom effect */
  }

  .hero-banner:hover video,
  .hero-banner:hover img {
    transform: scale(1.05); /* Slight zoom on hover */
  }

  .hero-content {
    position: relative;
    z-index: 1;
    padding: 20px;
  }

  .hero-headline {
    font-size: 3rem; /* Increased hero headline size */
    margin-bottom: 1.5rem;
    text-shadow: 2px 2px 3px var(--shadow-color); /* Text shadow for depth */
  }

  .hero-subheadline {
    font-size: 1.3rem;
    margin-bottom: 2.5rem;
    color: #eee; /* Lighter subheadline color */
    text-shadow: 1px 1px 2px var(--shadow-color); /* Text shadow for depth */
  }

  .cta-button {
    display: inline-block;
    padding: 14px 35px; /* Adjusted cta button padding */
    background-color: var(--primary-color);
    color: var(--secondary-color);
    border-radius: 7px;
    font-weight: bold;
    transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease; /* Smooth transitions */
    border: none;
    cursor: pointer;
    font-size: 1.1rem; /* Slightly larger font size */
    box-shadow: 0 4px 7px var(--shadow-color); /* Shadow for button */
  }

  .cta-button:hover {
    background-color: var(--primary-darker);
    transform: translateY(-2px); /* Slight lift on hover */
    box-shadow: 0 6px 10px var(--shadow-color); /* Increased shadow on hover */
  }

  .cta-button:active {
    transform: translateY(0); /* No lift on active */
    box-shadow: 0 4px 7px var(--shadow-color); /* Reset shadow on active */
  }

  /* About Section */
  .about-section {
    background-color: var(--secondary-color); /* White background for about section */
    box-shadow: 0 -2px 5px var(--shadow-color); /* Top shadow for section separation */
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px; /* Increased gap */
    align-items: center;
  }

  .about-text {
    text-align: left;
  }

  .about-text h2 {
    font-size: 2.2rem; /* Adjusted about section heading size */
  }

  .about-values {
    list-style: none;
    padding: 0;
    margin-top: 20px; /* Add margin above values list */
  }

  .about-values li {
    display: flex;
    align-items: center;
    margin-bottom: 15px; /* Increased spacing between values */
    font-size: 1.1rem; /* Slightly larger value text */
  }

  .about-values li i {
    margin-right: 15px; /* Increased icon spacing */
    color: var(--primary-color);
    font-size: 1.3rem; /* Adjusted icon size */
  }

  .quote-section {
    background-color: var(--light-gray);
    padding: 50px 0; /* Adjusted quote section padding */
    text-align: center;
    font-style: italic;
    font-size: 1.3rem; /* Adjusted quote font size */
    color: #777; /* Softer quote text color */
  }
  .quote-section blockquote {
    margin: 0 auto;
    max-width: 800px;
  }

  /* Programs Section */
  .programs-section {
    background-color: var(--light-gray);
  }

  .programs-section h2 {
    text-align: center; /* Center programs section heading */
    font-size: 2.5rem; /* Adjusted programs section heading size */
    margin-bottom: 40px; /* Increased margin below heading */
  }

  .programs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); /* Slightly wider program cards */
    gap: 35px; /* Increased gap */
  }

  .program-card {
    background-color: var(--secondary-color);
    border-radius: 10px; /* More rounded program cards */
    padding: 25px; /* Increased padding */
    box-shadow: 0 5px 10px var(--shadow-color); /* More pronounced shadow */
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth transitions */
  }

  .program-card:hover {
    transform: translateY(-5px); /* Lift on hover */
    box-shadow: 0 8px 15px var(--shadow-color); /* Increased shadow on hover */
  }

  .program-card img {
    max-width: 100%;
    height: auto;
    margin-bottom: 20px; /* Increased image margin */
    border-radius: 8px; /* Rounded corners for images */
  }

  .program-title {
    font-size: 1.7rem; /* Adjusted program title size */
    margin-bottom: 12px;
  }

  .program-description {
    margin-bottom: 20px;
    color: #666; /* Slightly softer description text */
  }

  .explore-button {
    @extend .cta-button;
    padding: 12px 30px;
    font-size: 1rem;
  }


  /* Impact Section */
  .impact-section {
    background-color: var(--secondary-color); /* White background for impact section */
    text-align: center;
    padding-bottom: 80px; /* Increased padding bottom */
    box-shadow: 0 -2px 5px var(--shadow-color); /* Top shadow for section separation */
  }
  .impact-section h2 {
    font-size: 2.5rem;
    margin-bottom: 40px;
  }

  .impact-stats {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    margin-bottom: 40px; /* Increased margin */
  }

  .stat-item {
    margin: 30px; /* Increased margin */
    padding: 25px;
    background-color: var(--light-gray);
    border-radius: 10px;
    box-shadow: inset 0 0 0 2px var(--primary-color); /* Border with primary color */
  }

  .stat-number {
    font-size: 2.5rem; /* Increased stat number size */
    color: var(--primary-color);
    font-weight: bold;
    margin-bottom: 10px;
  }

  .stat-label {
    font-size: 1.1rem;
    color: var(--dark-gray);
  }

  .testimonials-carousel {
    /* Add carousel styles here if needed */
    padding: 0 20px;
  }

  .testimonial-item {
    padding: 30px; /* Increased padding */
    background-color: var(--light-gray);
    border-radius: 10px;
    margin: 20px 0; /* Vertical margin for testimonials */
    box-shadow: 0 3px 7px var(--shadow-color); /* Shadow for testimonials */
    font-style: italic;
    color: #666;
  }

  /* CTA Section */
  .cta-section {
    background-color: var(--primary-color); /* Primary color background for CTA */
    text-align: center;
    color: var(--secondary-color); /* White text color */
    padding: 100px 0; /* Increased padding */
  }

  .cta-section h2 {
    font-size: 3rem; /* Increased CTA heading size */
    color: var(--secondary-color);
    margin-bottom: 25px;
    text-shadow: 2px 2px 3px var(--shadow-color); /* Text shadow for contrast */
  }

  .cta-section p {
    color: #eee; /* Lighter paragraph color */
    font-size: 1.2rem;
    margin-bottom: 30px;
    text-shadow: 1px 1px 2px var(--shadow-color); /* Text shadow for contrast */
  }

  .cta-buttons {
    margin-top: 30px;
  }

  .donate-button,
  .volunteer-button {
    @extend .cta-button;
    margin: 0 15px; /* Increased button spacing */
  }

  /* Blog Section */
  .blog-section {
    background-color: var(--secondary-color); /* White background for blog */
    padding-bottom: 80px;
  }
  .blog-section h2 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 40px;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr)); /* Wider blog posts */
    gap: 40px; /* Increased gap */
  }

  .blog-post {
    background-color: var(--light-gray);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 8px var(--shadow-color); /* Shadow for blog posts */
    transition: box-shadow 0.3s ease;
  }
  .blog-post:hover {
    box-shadow: 0 7px 14px var(--shadow-color); /* Increased shadow on hover */
  }

  .post-thumbnail img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 10px 10px 0 0; /* Rounded corners for thumbnail */
  }

  .post-content {
    padding: 25px;
  }

  .post-title {
    font-size: 1.5rem;
    margin-bottom: 15px;
  }

  .post-excerpt {
    margin-bottom: 20px;
    color: #666;
  }

  .read-more-link {
    color: var(--primary-color);
    font-weight: bold;
    display: inline-block;
    margin-top: 10px;
  }

  /* Footer Section */
  footer {
    background-color: var(--dark-gray);
    color: var(--secondary-color);
    padding: 50px 0; /* Increased footer padding */
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Wider footer columns */
    gap: 40px; /* Increased gap */
  }

  .footer-col h3 {
    color: var(--secondary-color);
    border-bottom: 2px solid var(--primary-color);
    padding-bottom: 12px;
    margin-bottom: 25px;
    font-size: 1.4rem; /* Adjusted footer heading size */
  }

  .contact-info,
  .social-links,
  .newsletter {
    list-style: none;
    padding: 0;
  }

  .contact-info li,
  .social-links li {
    margin-bottom: 12px;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
  }
  .contact-info li i,
  .social-links li i {
    margin-right: 10px;
    color: var(--primary-color);
  }

  .social-links a {
    color: var(--secondary-color);
  }


  .newsletter-form {
    display: flex;
  }

  .newsletter-input {
