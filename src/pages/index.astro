---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Africa Peace Initiative">
  <a href="#main-content" class="skip-link">Skip to main content</a>

  <header>
    <nav class="container navbar">
      <div class="logo">
        <a href="/">
          <img
            src="https://ik.imagekit.io/5zp8ovb7c/Africa%20Peace%20Initiative/API%20logo-12.png?updatedAt=1741074058148"
            alt="Africa Peace Initiative Logo"
            style="height: 60px;"
            loading="eager"
            decoding="async"
          />
        </a>
      </div>
      <button
        class="hamburger"
        aria-label="Toggle navigation"
        aria-expanded="false"
        aria-controls="nav-links"
      >
        <i class="fas fa-bars"></i>
      </button>
      <ul class="nav-links" id="nav-links">
        <li><a href="#about">Who We Are</a></li>
        <li><a href="#programs">Our Approach</a></li>
        <li><a href="#get-involved">Get Involved</a></li>
        <li><a href="#contact">News & Press</a></li>
      </ul>
    </nav>
  </header>

  <section id="main-content" class="hero-banner">
    <!-- Background Layer -->
    <div class="hero-background">
      <div class="gradient-overlay"></div>
      <div class="africa-map" aria-hidden="true"></div>
      <div class="texture-overlay" aria-hidden="true"></div>
    </div>

    <!-- Main Content Layer -->
    <div class="hero-content container">
      <div class="content-grid">
        <!-- Text Content -->
        <div class="text-content">
          <p class="hero-tagline">We Rise as One</p>
          <h1 class="hero-headline">
            Africa United<br />
            <span class="highlight">in Peace</span>
            <span class="accent-line"></span>
          </h1>
          <p class="hero-subheadline">
            Empowering communities through dialogue, <br />
            collaboration, and sustainable solutions.
          </p>
          <div class="cta-buttons">
            <a
              href="#about"
              class="cta-button primary-button"
              aria-label="Learn more about our initiatives"
            >
            Learn More 
            </a>
            <a
              href="/donate"
              class="cta-button secondary-button"
              aria-label="Donate to support our cause"
            >
              Support API
            </a>
          </div>
        </div>

        <!-- Visual Element -->
        <div class="hero-visual">
          <div class="peace-emblem" aria-hidden="true">
            <svg class="peace-symbol" viewBox="0 0 100 100">
              <circle cx="50" cy="50" r="45" class="circle-base"></circle>
              <path d="M50 5 L50 95 M25 25 L50 50 L75 25" class="lines"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="about" class="about-section">
    <div class="about-background">
      <div class="background-overlay"></div>
    </div>
    <div class="container about-content">
      <div class="about-text">
        <h2 class="section-title">Who We Are</h2>
        <div class="about-description">
          <p class="intro-text">
            The Africa Peace Initiative (API) is a pan-African, people-centered
            organization committed to rethinking peace and security across the
            continent. We challenge conventional approaches by fostering
            dialogue, collaboration, technology-driven peacebuilding, and
            leadership development.
          </p>
          <p>
            Our work is rooted in African realities, blending indigenous wisdom
            with modern solutions to tackle political, social, economic, and
            environmental drivers of conflict.
          </p>
        </div>

        <div class="vision-mission">
          <div class="vision-card">
            <h3>Our Vision</h3>
            <p>
              A resilient, just, and peaceful Africa where communities thrive in
              dignity, security, and mutual respect.
            </p>
          </div>
          <div class="mission-card">
            <h3>Our Mission</h3>
            <p>
              To rethink and transform peace and security in Africa by
              addressing root causes of conflict and leveraging technology and
              storytelling.
            </p>
          </div>
        </div>
      </div>
    </div>
    <blockquote class="quote-section container">
      "Peace is not merely the absence of conflict, but the presence of
      justice." - Dr. Kwame Nkrumah
    </blockquote>
  </section>

  <section id="programs" class="programs-section">
    <div class="container">
      <h2>Our Programs</h2>
      <div class="programs-grid">
        <div class="program-card">
          <img
            src="https://ik.imagekit.io/5zp8ovb7c/Africa%20Peace%20Initiative/empowering_women.jpg?updatedAt=1740578278289"
            alt="Conflict Resolution Workshops"
            loading="lazy"
            decoding="async"
          />
          <h3 class="program-title">Conflict Resolution Workshops</h3>
          <p class="program-description">
            Training community leaders in mediation techniques.
          </p>
          <a href="#" class="cta-button secondary-button">Explore Now</a>
        </div>
        <div class="program-card">
          <img
            src="https://ik.imagekit.io/5zp8ovb7c/Africa%20Peace%20Initiative/Like%20I%20said%20before%20I%20LOVE%20t....jpg?updatedAt=1740581008521"
            alt="Youth Leadership Training"
            loading="lazy"
            decoding="async"
          />
          <h3 class="program-title">Youth Leadership Training</h3>
          <p class="program-description">
            Developing the next generation of peacebuilders.
          </p>
          <a href="#" class="cta-button secondary-button">Explore Now</a>
        </div>
        <div class="program-card">
          <img
            src="https://ik.imagekit.io/5zp8ovb7c/Africa%20Peace%20Initiative/What's%20left%20from%20all%20that%20w....jpg?updatedAt=1740581142001"
            alt="Sustainable Development Initiatives"
            loading="lazy"
            decoding="async"
          />
          <h3 class="program-title">Sustainable Development Initiatives</h3>
          <p class="program-description">
            Projects for economic empowerment and sustainability.
          </p>
          <a href="#" class="cta-button secondary-button">Explore Now</a>
        </div>
      </div>
    </div>
  </section>

  <section id="impact" class="impact-section">
    <div class="container">
      <h2>The Change We're Making</h2>
      <div class="impact-stats">
        <div class="stat-item">
          <h4 class="stat-number">50+</h4>
          <p class="stat-label">Communities Supported</p>
        </div>
        <div class="stat-item">
          <h4 class="stat-number">2,000+</h4>
          <p class="stat-label">People Trained</p>
        </div>
        <div class="stat-item">
          <h4 class="stat-number">10</h4>
          <p class="stat-label">Countries Reached</p>
        </div>
      </div>
      <div class="testimonials-carousel">
        <div class="testimonial-item">
          <p>
            "API's training has transformed our community." - Community Leader,
            South Sudan
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="get-involved" class="cta-section">
    <div class="container">
      <h2>Join the Movement!</h2>
      <p>Be a part of building a peaceful and prosperous Africa.</p>
      <div class="cta-buttons">
        <a href="/donate" class="cta-button primary-button">Donate Today</a>
        <a href="/volunteer" class="cta-button secondary-button"
          >Volunteer Now</a
        >
      </div>
    </div>
  </section>

  <section id="blog" class="blog-section">
    <div class="container">
      <h2>Latest Updates</h2>
      <div class="blog-grid">
        <div class="blog-post">
          <div class="post-thumbnail"></div>
          <div class="post-content">
            <h3 class="post-title">Empowering Women in Peacebuilding</h3>
            <p class="post-excerpt">Learn about API's recent initiative...</p>
            <a href="/women-peacebuilding" class="read-more-link">Read More</a>
          </div>
        </div>
        <div class="blog-post">
          <div class="post-thumbnail"></div>
          <div class="post-content">
            <h3 class="post-title">Youth Leading Sustainable Development</h3>
            <p class="post-excerpt">Discover how young people are driving...</p>
            <a href="/youth-development" class="read-more-link">Read More</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="partners" class="partners-section">
    <div class="container">
      <h2>Our Partners</h2>
      <div class="partners-grid">
        <a
          href="https://www.boschalumni.net/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Bosch logo"
        >
          <img
            src="https://ik.imagekit.io/5zp8ovb7c/Africa%20Peace%20Initiative/bosch.png?updatedAt=1741675559148"
            alt="Partner 1 Logo"
            width="250"
            height="150"
            loading="lazy"
            decoding="async"
          />
        </a>
        <a
          href="https://www.kas.de/en/home"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Konrad Logo"
        >
          <img
            src="https://ik.imagekit.io/5zp8ovb7c/Africa%20Peace%20Initiative/konrad.png?updatedAt=1741679164315"
            alt="Partner 2 Logo"
            width="150"
            height="150"
            loading="lazy"
            decoding="async"
          />
        </a>
      </div>
    </div>
  </section>

  <footer id="contact">
    <div class="container footer-content">
      <div class="footer-col">
        <h3>Contact Us</h3>
        <ul class="contact-info">
          <li>
            <i class="fas fa-envelope"></i>
            <a href="mailto:info@africapeaceinitiative.org"
              >info@africapeaceinitiative.org</a
            >
          </li>
          <li>
            <i class="fas fa-phone"></i>
            <a href="tel:+19297612735">+1 (929) 761-2735</a>
          </li>
          <li>
            <i class="fas fa-map-marker-alt"></i> 12 Peace Street, Nairobi, Kenya
          </li>
        </ul>
      </div>
      <div class="footer-col">
        <h3>Follow Us</h3>
        <ul class="social-links">
          <li>
            <a href="https://facebook.com/api" aria-label="Facebook"
              ><i class="fab fa-facebook"></i> Facebook</a
            >
          </li>
          <li>
            <a href="https://twitter.com/api" aria-label="Twitter"
              ><i class="fab fa-twitter"></i> Twitter</a
            >
          </li>
          <li>
            <a href="#" aria-label="Instagram"
              ><i class="fab fa-instagram"></i> Instagram</a
            >
          </li>
          <li>
            <a href="#" aria-label="LinkedIn"
              ><i class="fab fa-linkedin"></i> LinkedIn</a
            >
          </li>
        </ul>
      </div>
      <div class="footer-col">
        <h3>Stay Updated</h3>
        <p>Subscribe to our newsletter for the latest news.</p>
        <form class="newsletter-form" action="/subscribe" method="POST">
          <input
            type="email"
            class="newsletter-input"
            placeholder="Enter your email"
            required
            aria-label="Newsletter email"
          />
          <button type="submit" class="cta-button primary-button"
            >Subscribe</button
          >
        </form>
      </div>
    </div>
    <div class="footer-bottom container">
      <p>
        © {new Date().getFullYear()} Africa Peace Initiative. All rights reserved.
        |
        <a href="#">Privacy Policy</a> |
        <a href="#">Terms of Service</a>
      </p>
    </div>
  </footer>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const hamburger = document.querySelector(".hamburger");
      const navLinks = document.querySelector(".nav-links");

      if (!hamburger || !navLinks) {
        console.error("Error: Hamburger or navLinks element not found!");
        return;
      }

      hamburger.addEventListener("click", () => {
        const isExpanded = hamburger.getAttribute("aria-expanded") === "true";
        hamburger.setAttribute("aria-expanded", !isExpanded);
        navLinks.classList.toggle("active");
      });
    });
  </script>

  <style lang="scss">
    @use "sass:color";

    /* Variables */
    :root {
      --primary-color: #2e8b57;
      --primary-darker: #226441;
      --secondary-color: #ffffff;
      --off-white: #f0fff0;
      --dark-green: #006400;
      --accent-color: #38761d;
      --blue-accent: #4682b4;
      --shadow-color: rgba(0, 0, 0, 0.1);
      --spacing-unit: 24px;
      --border-radius: 8px;
      --neutral-light: #f2f2f2;
      --neutral-dark: #333333;
      --headline-font: "Montserrat", sans-serif;
      --subheadline-font: "Roboto", sans-serif;
    }

    /* Global Styles */
    body {
      font-family: "Roboto", sans-serif;
      color: var(--neutral-dark);
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      background-color: var(--off-white);
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: "Montserrat", sans-serif;
      font-weight: 700;
      color: var(--dark-green);
      margin: 1.5rem 0 1rem;
      line-height: 1.3;
      letter-spacing: 0.5px;
    }

    h1 {
      font-size: 3.5rem;
      @media (max-width: 768px) {
        font-size: 2.5rem;
      }
    }

    h2 {
      font-size: 2.8rem;
      @media (max-width: 768px) {
        font-size: 2rem;
      }
    }

    h3 {
      font-size: 2rem;
      @media (max-width: 768px) {
        font-size: 1.75rem;
      }
    }

    h4 {
      font-size: 1.6rem;
    }

    p {
      line-height: 1.7;
      margin-bottom: 1.5rem;
      color: var(--neutral-dark);
      font-size: 1.1rem;
      @media (max-width: 768px) {
        font-size: 1rem;
      }
    }

    a {
      color: var(--primary-color);
      transition: color 0.3s ease;
    }

    a:hover {
      color: var(--primary-darker);
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 var(--spacing-unit);
      @media (max-width: 768px) {
        padding: 0 15px;
      }
    }

    section {
      padding: 80px 0;
      position: relative;
      animation: fadeIn 0.8s ease-in;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Skip Link */
    .skip-link {
      position: absolute;
      top: -50px;
      left: 0;
      background: var(--primary-color);
      color: var(--secondary-color);
      padding: 10px;
      z-index: 100;
      transition: top 0.3s ease;

      &:focus {
        top: 0;
      }
    }

    /* Header */
    header {
      background-color: var(--secondary-color);
      padding: 25px 0;
      box-shadow: 0 4px 12px var(--shadow-color);
      position: sticky;
      top: 0;
      z-index: 10;
      @media (max-width: 768px) {
        padding: 15px 0;
      }
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      @media (max-width: 768px) {
        flex-direction: column;
        align-items: flex-start;
      }
    }

    .nav-links {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      @media (max-width: 768px) {
        display: none;
        flex-direction: column;
        width: 100%;
        margin-top: 10px;
        &.active {
          display: flex;
        }
        li {
          margin-left: 0;
          a {
            padding: 10px 15px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
          }
        }
      }
    }

    .nav-links li a {
      color: var(--dark-green);
      padding: 14px 20px;
      border-radius: var(--border-radius);
      transition: all 0.3s ease;
      font-weight: 600;
      font-size: 1.1rem;
    }

    .nav-links li a:hover {
      background-color: var(--primary-color);
      color: var(--secondary-color);
    }

    .hamburger {
      display: none;
      background: none;
      border: none;
      padding: 15px;
      cursor: pointer;
      @media (max-width: 768px) {
        display: block;
        position: absolute;
        top: 10px;
        right: 15px;
        padding: 10px;
      }
    }

    .hamburger i {
      font-size: 28px;
      color: var(--dark-green);
      transition: color 0.3s ease;
    }

    .hamburger:hover i {
      color: var(--primary-color);
    }

    .hero-banner {
      position: relative;
      min-height: 90vh;
      display: flex;
      align-items: center;
      overflow: hidden;
      background: #102a43;
    }

    .hero-background {
      position: absolute;
      inset: 0;
      z-index: 1;
    }

    .gradient-overlay {
      background: linear-gradient(
        135deg,
        #0057b7 0%,
        #27ae60 50%,
        #003f8a 100%
      );
      opacity: 1;
      animation: gradientFlow 10s ease-in-out infinite;
    }

    .africa-map {
      opacity: 0.3;
      transform: scale(1.15);
      filter: drop-shadow(0 0 20px rgba(39, 174, 96, 0.7));
      animation: mapPulse 6s infinite ease-in-out;
    }

    .texture-overlay {
      position: absolute;
      inset: 0;
      background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M0 0 Q50 20 100 0 T200 0" fill="none" stroke="rgba(255,255,255,0.08)" stroke-width="1"/></svg>');
      background-size: cover;
      opacity: 0.4;
    }

    .hero-content {
      position: relative;
      z-index: 2;
      padding: 3rem 0;
    }

    .content-grid {
      display: grid;
      grid-template-columns: 6fr 4fr;
      gap: 4rem;
      align-items: center;
      max-width: 1300px;
      margin: 0 auto;
    }

    .text-content {
      padding-right: 3rem;
      position: relative;
    }

    .hero-tagline {
      font-size: 1.3rem;
      color: #fff;
      opacity: 0.9;
      margin-bottom: 1.2rem;
      font-weight: 600;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      text-shadow: 0 0 10px rgba(39, 174, 96, 0.5);
      animation: taglineFade 4s infinite ease-in-out;
      font-family: "Arial", sans-serif; /* Replace with NGO’s font */
    }

    .hero-headline {
      font-size: 5.5rem;
      font-weight: 900;
      line-height: 1.05;
      color: #fff;
      text-shadow:
        0 3px 15px rgba(0, 0, 0, 0.4),
        0 0 25px rgba(39, 174, 96, 0.6);
      margin-bottom: 2.5rem;
      letter-spacing: -0.03em;
      position: relative;
      font-family: "Arial", sans-serif; /* Replace with NGO’s bold font */
    }

    .highlight {
      color: #27ae60;
      display: block;
      font-weight: 900;
      text-shadow: 0 0 20px rgba(39, 174, 96, 0.8);
      animation: highlightGlow 1.5s infinite ease-in-out;
    }

    .accent-line {
      position: absolute;
      bottom: -10px;
      left: 0;
      width: 60%;
      height: 4px;
      background: #27ae60;
      box-shadow: 0 0 15px #27ae60;
      animation: lineGrow 3s infinite ease-in-out;
    }

    .hero-subheadline {
      font-size: 1.6rem;
      line-height: 1.5;
      color: #fff;
      font-weight: 500;
      max-width: 80%;
      margin-bottom: 3rem;
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
      font-family: "Arial", sans-serif; /* Replace with NGO’s clean font */
    }

    .cta-buttons {
      display: flex;
      gap: 2rem;
    }

    .cta-button {
      padding: 1.3rem 3.5rem;
      border-radius: 40px;
      font-size: 1.3rem;
      font-weight: 700;
      text-decoration: none;
      transition: all 0.4s ease;
      letter-spacing: 0.08em;
      box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
    }

    .primary-button {
      background: #0057b7;
      color: #fff;
      box-shadow: 0 6px 25px rgba(0, 87, 183, 0.6);
    }

    .primary-button:hover {
      background: #003f8a;
      transform: translateY(-4px) scale(1.05);
      box-shadow: 0 10px 30px rgba(0, 87, 183, 0.8);
    }

    .secondary-button {
      background: transparent;
      border: 3px solid #27ae60;
      color: #27ae60;
      box-shadow: 0 4px 20px rgba(39, 174, 96, 0.4);
    }

    .secondary-button:hover {
      background: #27ae60;
      color: #fff;
      transform: translateY(-4px) scale(1.05);
      box-shadow: 0 10px 30px rgba(39, 174, 96, 0.7);
    }

    .hero-visual {
      justify-self: end;
      padding: 2.5rem;
      position: relative;
    }

    .peace-symbol {
      width: 280px;
      height: 280px;
      transition: transform 0.4s ease;
    }

    .circle-base {
      fill: none;
      stroke: #fff;
      stroke-width: 3;
      opacity: 0.9;
      animation: gentlePulse 2s infinite ease-in-out;
    }

    .lines {
      fill: none;
      stroke: #27ae60;
      stroke-width: 4;
      stroke-linecap: round;
    }

    .hero-banner:hover .peace-symbol {
      transform: scale(1.1);
    }

    /* Mobile Optimization */
    @media (max-width: 768px) {
      .hero-banner {
        min-height: 85vh;
        padding: 2rem 0;
      }

      .content-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
        text-align: center;
      }

      .text-content {
        padding: 0 1rem;
      }

      .hero-tagline {
        font-size: 1.1rem;
        margin-bottom: 1rem;
      }

      .hero-headline {
        font-size: 3.5rem;
        margin-bottom: 1.8rem;
      }

      .accent-line {
        width: 40%;
        left: 50%;
        transform: translateX(-50%);
      }

      .hero-subheadline {
        font-size: 1.3rem;
        max-width: 90%;
        margin: 0 auto 2rem;
      }

      .cta-buttons {
        flex-direction: column;
        gap: 1.2rem;
        align-items: center;
      }

      .cta-button {
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        width: 85%;
        max-width: 280px;
      }

      .hero-visual {
        padding: 1.5rem 0;
        justify-self: center;
      }

      .peace-symbol {
        width: 200px;
        height: 200px;
      }

      .africa-map {
        transform: scale(1.3);
        opacity: 0.25;
      }
    }

    @media (max-width: 480px) {
      .hero-headline {
        font-size: 2.8rem;
      }

      .hero-subheadline {
        font-size: 1.1rem;
      }

      .cta-button {
        padding: 0.9rem 2rem;
        font-size: 1rem;
      }

      .peace-symbol {
        width: 160px;
        height: 160px;
      }
    }

    /* Animations */
    @keyframes gradientFlow {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
