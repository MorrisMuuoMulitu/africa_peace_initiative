<style lang="scss">
  /* Variables */
  :root {
    --primary-color: #083313; /* Earthy green */
    --primary-darker: #4e514b;
    --secondary-color: #ffffff;
    --off-white: #f5f5f5;
    --dark-green: #06431a;
    --accent-color: #e4decc; 
    --blue-accent: #74a382; 
    --shadow-color: rgb(132,124,100);
    --spacing-unit: 24px;
    --border-radius: 8px;
  }

  /* Global Styles */
  body {
    font-family: "Roboto", sans-serif;
    color: var(--dark-green);
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: var(--off-white);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Montserrat", sans-serif;
    font-weight: 800;
    color: var(--dark-green);
    margin: 1.5rem 0 1rem;
    line-height: 1.2;
    letter-spacing: 0.5px;
  }

  h1 {
    font-size: 3.2rem;
  }
  h2 {
    font-size: 2.5rem;
  }
  h3 {
    font-size: 1.8rem;
  }
  h4 {
    font-size: 1.5rem;
  }

  p {
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: #333;
    font-size: 1.1rem;
  }

  a {
    color: var(--primary-color);
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--primary-darker);
  }

  .container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 var(--spacing-unit);
  }

  section {
    padding: 100px 0;
    position: relative;
    animation: fadeIn 0.8s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Skip Link */
  .skip-link {
    position: absolute;
    top: -50px;
    left: 0;
    background: var(--primary-color);
    color: var(--secondary-color);
    padding: 10px;
    z-index: 100;
    transition: top 0.3s ease;
    &:focus {
      top: 0;
    }
  }

  /* Header */
  header {
    background-color: var(--secondary-color);
    padding: 30px 0;
    box-shadow: 0 4px 12px var(--shadow-color);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
  }

  .nav-links li a {
    color: var(--dark-green);
    padding: 14px 20px;
    border-radius: var(--border-radius);
    transition: all 0.3s ease;
    font-weight: 600;
    font-size: 1.1rem;
  }

  .nav-links li a:hover {
    background-color: var(--primary-color);
    color: var(--secondary-color);
  }

  .hamburger {
    display: none;
    background: none;
    border: none;
    padding: 15px;
    cursor: pointer;
  }

  .hamburger i {
    font-size: 28px;
    color: var(--dark-green);
    transition: color 0.3s ease;
  }

  .hamburger:hover i {
    color: var(--primary-color);
  }

  /* Hero Banner */
  .hero-banner {
    height: 700px;
    background: linear-gradient(
      135deg,
      rgba(46, 125, 50, 0.7),
      rgba(2, 136, 209, 0.5)
    );
    color: var(--secondary-color);
    text-align: center;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1.2s ease;
  }

  .hero-banner:hover img {
    transform: scale(1.08);
  }

  .hero-content {
    z-index: 1;
    padding: 40px;
  }

  .hero-headline {
    font-size: 4rem;
    text-shadow: 3px 3px 6px var(--shadow-color);
  }

  .hero-subheadline {
    font-size: 1.5rem;
    color: var(--secondary-color);
    text-shadow: 1px 1px 3px var(--shadow-color);
  }

  /* Buttons */
  .cta-button {
    display: inline-block;
    padding: 16px 40px;
    border-radius: var(--border-radius);
    font-weight: 600;
    font-size: 1.2rem;
    text-transform: uppercase;
    transition: all 0.3s ease;
    box-shadow: 0 6px 12px var(--shadow-color);
  }

  .primary-button {
    background-color: var(--primary-color);
    color: var(--secondary-color);
  }

  .primary-button:hover {
    background-color: var(--primary-darker);
    transform: translateY(-4px);
    box-shadow: 0 8px 16px var(--shadow-color);
  }

  .secondary-button {
    color: #FFFFFF; 
    background: linear-gradient(135deg, #66BB6A 0%, #2F4F4F 100%);
    text-decoration: none;
    padding: 12px 24px;
    border-radius: 5px;
    font-weight: bold;
    transition: background-color 0.3s ease; /* Smooth hover effect */
}

.secondary-button:hover {
    background-color: #81C784; /* Slightly darker green on hover for feedback */
}


  /* About Section */
  .about-section {
    background-color: var(--secondary-color);
  }

  .about-values li,
  .approach-list li {
    font-size: 1.2rem;
    margin-bottom: 20px;
    transition: transform 0.3s ease;
  }

  .about-values li:hover,
  .approach-list li:hover {
    transform: translateX(10px);
  }

  .about-values li i,
  .approach-list li i {
    color: var(--accent-color);
    font-size: 1.5rem;
  }

  .quote-section {
    background-color: var(--off-white);
    padding: 60px 0;
    font-size: 1.5rem;
    color: #555;
    border-top: 1px solid var(--primary-color);
    border-bottom: 1px solid var(--primary-color);
  }

  /* Programs Section */
  .programs-section {
    background-color: var(--off-white);
  }

  .programs-grid {
    grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
    gap: 40px;
  }

  .program-card {
    background-color: var(--secondary-color);
    border-radius: var(--border-radius);
    padding: 30px;
    box-shadow: 0 6px 12px var(--shadow-color);
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .program-card:hover {
    transform: translateY(-8px) rotate(1deg);
    box-shadow: 0 10px 20px var(--shadow-color);
    border-color: var(--accent-color);
  }

  .program-card img {
    border-radius: var(--border-radius);
