---
    import Layout from "../layouts/Layout.astro";
    ---

    <Layout title="Youth Leading Sustainable Development">
      <a href="#main-content" class="skip-link">Skip to main content</a>
      <header>
        <nav class="container navbar">
          <div class="logo">
            <a href="/">
              <img
                src="https://ik.imagekit.io/5zp8ovb7c/Africa%20Peace%20Initiative/API%20logo-12.png?updatedAt=1741074058148"
                alt="Africa Peace Initiative Logo"
                style="height: 60px;"
                loading="eager"
              />
            </a>
          </div>
          <button
            class="hamburger"
            aria-label="Toggle navigation"
            aria-expanded="false"
          >
            <i class="fas fa-bars"></i>
          </button>
          <ul class="nav-links">
            <li><a href="/">Who We Are</a></li>
            <li><a href="/">Our Approach</a></li>
            <li><a href="/">Get Involved</a></li>
            <li><a href="/">News & Press</a></li>
          </ul>
        </nav>
      </header>
      <section class="hero-banner">
        <div class="hero-content container">
          <h1 class="hero-headline">
            Youth Leading Sustainable Development
          </h1>
          <p class="hero-subheadline">
            Discover how young people are driving sustainable development in Africa.
          </p>
        </div>
      </section>
      <section class="content-section">
        <div class="container">
          <h2>Our Vision</h2>
          <p>
            The Africa Peace Initiative believes that young people are key to
            achieving sustainable development in Africa. We support youth-led
            initiatives that promote economic empowerment, environmental
            sustainability, and social justice.
          </p>
          <h2>Recent Projects</h2>
          <ul>
            <li>
              Supporting youth-led businesses that promote sustainable agriculture.
            </li>
            <li>
              Providing training and resources to young people who are working to
              protect the environment.
            </li>
            <li>
              Empowering young people to advocate for policies that promote social
              justice.
            </li>
          </ul>
        </div>
      </section>
      <footer>
        <div class="container footer-content">
          <div class="footer-col">
            <h3>Contact Us</h3>
            <ul class="contact-info">
              <li>
                <i class="fas fa-envelope"></i> Email:
                info@africapeaceinitiative.org
              </li>
              <li><i class="fas fa-phone"></i> Phone: +1 (929) 761-2735</li>
              <li>
                <i class="fas fa-map-marker-alt"></i> Address: 12 Peace Street,
                Nairobi, Kenya
              </li>
            </ul>
          </div>
          <div class="footer-col">
            <h3>Follow Us</h3>
            <ul class="social-links">
              <li><a href="#"><i class="fas fa-facebook"></i> Facebook</a></li>
              <li><a href="#"><i class="fas fa-twitter"></i> Twitter</a></li>
              <li><a href="#"><i class="fas fa-instagram"></i> Instagram</a></li>
              <li><a href="#"><i class="fas fa-linkedin"></i> LinkedIn</a></li>
            </ul>
          </div>
          <div class="footer-col">
            <h3>Stay Updated</h3>
            <p>Subscribe to our newsletter for the latest news.</p>
            <form class="newsletter-form">
              <input
                type="email"
                class="newsletter-input"
                placeholder="Your Email Address"
                required
              />
              <button type="submit" class="cta-button primary-button">
                Subscribe
              </button>
            </form>
          </div>
        </div>
        <div class="footer-bottom container">
          <p style="color: white;">
            Â© {new Date().getFullYear()} Africa Peace Initiative. All rights
            reserved. |
            <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a>
          </p>
        </div>
      </footer>
    </Layout>

    <style lang="scss">
      .hero-banner {
        position: relative;
        height: 400px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: var(--secondary-color);
        background: rgba(46, 139, 87, 0.7);

        &::before {
          content: "";
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: rgba(46, 139, 87, 0.4);
          z-index: 1;
        }

        .hero-content {
          position: relative;
          z-index: 2;
          padding: 20px;
        }

        .hero-headline {
          font-size: 3rem;
          margin-bottom: 1.5rem;
          text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
          color: var(--secondary-color);
        }

        .hero-subheadline {
          font-size: 1.5rem;
          margin-bottom: 2.5rem;
          color: var(--off-white);
          text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.4);
        }
      }

      .content-section {
        padding: 60px 0;
        background-color: var(--off-white);

        .container {
          max-width: 800px;
          margin: 0 auto;
          padding: 0 20px;
        }

        h2 {
          font-size: 2.5rem;
          color: var(--dark-green);
          margin-bottom: 30px;
          text-align: center;
        }

        p {
          font-size: 1.2rem;
          color: var(--neutral-dark);
          margin-bottom: 20px;
          text-align: center;
        }

        ul {
          list-style: disc;
          padding-left: 40px;
          margin-bottom: 20px;

          li {
            font-size: 1.1rem;
            color: var(--neutral-dark);
            margin-bottom: 10px;
          }
        }
      }
    </style>
